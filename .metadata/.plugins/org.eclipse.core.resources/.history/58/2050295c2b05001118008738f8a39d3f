package ProjetMorphologieAlgo;


public class AVLTree {
    private AVLNode root;

 
  

    public void insert(Racine r) {
        root = insertRec(root, r);
    }

    private AVLNode insertRec(AVLNode node, Racine r) {
        if (node == null) return new AVLNode(r);

        if (r.getLettres().compareTo(node.racine.getLettres()) < 0)
            node.left = insertRec(node.left, r);
        else
            node.right = insertRec(node.right, r);

        

        return node;
    }

    public Racine search(String lettres) {
        AVLNode curr = root;
        while (curr != null) {
            int c = lettres.compareTo(curr.racine.getLettres());
            if (c == 0) return curr.racine;
            curr = c < 0 ? curr.left : curr.right;
        }
        return null;
    }
}
